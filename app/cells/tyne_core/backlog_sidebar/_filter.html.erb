<%= content_tag :div, :data => { :cell => "Filter" }, :class => "Filter" do %>
  <%= simple_form_for :filter, :html => { :class => 'form-horizontal' } do |f| %>
    <% @fields.each do |field| %>
      <ul class="filter">
        <li class="filter-name"><%= TyneCore::Issue.human_attribute_name(field[0]) %></li>
        <li class="filter-options">
        <%= f.input field[0], :label => "All", :required => false, :input_html => { :id => "filer_#{field[0]}_all", :type => :radio, :value => ''}, :label_html => { :for => "filter_#{field[0]}_all", :class => "selected" }, :wrapper_html => { :class => "filter-controls-hidden" } %>
          <% field[1].each do |option| %>
            <%= f.input field[0], :label => option[0], :required => false, :input_html => { :id => "filter_#{field[0]}_#{option[1]}", :type => :radio, :value => option[1] }, :label_html => { :for => "filter_#{field[0]}_#{option[1]}" }, :wrapper_html => { :class => "filter-controls-hidden" } %>
          <% end %>
        </li>
      </ul>
    <% end %>
  <% end %>
<% end %>
