<% cache ["v2", "projects", "new", current_user] do %>
  <div class="centered">
  <%= simple_form_for(@project, :validate => true) do |f| %>
    <table>
      <tr>
        <td class="half"><%= f.input :name %></td>
        <td><%= f.input :key %></td>
      </tr>
      <tr>
        <td colspan="2">The project key is used to identify your project and is used to build a unique issue key.</td>
      </tr>
      <tr>
        <td colspan="2"><%= f.input :description, :hint => "Markdown is enabled." %></td>
      </tr>
    </table>
    <%= f.button :submit, :class => "btn btn-success" %>
  <% end %>
  </div>
<% end %>
