<div class="span3">
  <div class="well">
    <% cache ["v11", "issues", "backlog", "sidebar", session[:sorting]] do %>
      <%= render_cell :"tyne_core/backlog_sidebar", :search %>
      <%= render_cell :"tyne_core/backlog_sidebar", :filter, @project %>
      <%= render_cell :"tyne_core/backlog_sidebar", :sorting %>
      <%= render_cell :"tyne_core/backlog_sidebar", :grouping %>
    <% end %>
  </div>
</div>

<div class="span9">
  <div data-cell="Backlog">
    <div class="options">
      <%= link_to "Create", main_app.new_issue_path, :class => "btn btn-small" if current_user %>
      <%= link_to content_tag(:i, '', :class => "icon-refresh"), main_app.issues_path(:format => :pjax), :class => "btn btn-small btn-refresh", :title => "Refresh" %>
      <div class="btn-group" data-toggle="buttons-radio" data-behaviour="issue-view">
        <button type="button" class="btn btn-small" data-view="minimal" title="List view"><i class="icon-minus"></i></button>
        <button type="button" class="btn btn-small active" data-view="detailed" title="Detail view"><i class="icon-tasks"></i></button>
      </div>
    </div>

    <div class="issue-list issue-detailed">
      <table>
        <%= render :partial => 'issue', :collection => @issues %>
      </table>
      <%= render_cell :"tyne_core/pagination", :show, :collection => @issues, :total => @total, :current_page => @current_page, :page_count => @page_count, :page_size => @page_size %>
    </div>
  </div>
</div>
