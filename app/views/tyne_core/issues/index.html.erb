<div class="options">
  <%= link_to "Create", main_app.new_issue_path, :class => "btn btn-small btn-primary" %>
  <%= link_to "Refresh", main_app.issues_path, :class => "btn btn-small" %>
  <div class="btn-group" data-toggle="buttons-radio" data-behaviour="issue-view">
    <button type="button" class="btn btn-small" data-view="minimal">List</button>
    <button type="button" class="btn btn-small" data-view="compact">Compact</button>
    <button type="button" class="btn btn-small active" data-view="detailed">Detailed</button>
  </div>
</div>

<div class="issue-list issue-detailed">
  <%= render @issues %>
</div>
