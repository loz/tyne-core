<% cache ["v2", "view", @issue] do %>
<h1>Show Issue</h1>
<h2><%= @issue.summary %></h2>
<p class="tag-list">
  <%= issue_type(@issue) %>
  <%= issue_reported_by(@issue) %>
  <%= issue_reported_at(@issue) %>
</p>
<p><%= markup_to_html(@issue.description) %></p>

<% content_for :sidebar do %>
  <h1>Sidebar</h1>
<% end %>
<% end %>
