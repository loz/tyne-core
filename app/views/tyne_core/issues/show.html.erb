<% cache ["v12", "view", @issue, can_edit?] do %>
<div class="options">
  <% if can_edit? %>
  <%= link_to "Edit", main_app.edit_issue_path(:user => @project.user.username, :key => @project.key, :id => @issue.number), :class => 'btn btn-small' %>
  <div class="btn-group">
    <%= default_action(@issue) %>
    <button class="btn btn-small dropdown-toggle" data-toggle="dropdown">
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu">
      <% @issue.state_transitions.each do |transition| %>
        <li><%= link_to I18n.t("states.transitions.#{transition.event}"), main_app.workflow_issue_path(:user => @project.user.username, :key => @project.key, :id => @issue.number, :transition => transition.event) %></li>
      <% end %>
    </ul>
  </div>
  <%= link_to "Assign to me", main_app.assign_to_me_issue_path(:user => @project.user.username, :key => @project.key, :id => @issue.number), :class => 'btn btn-small', :method => :post %>
  <% end %>
</div>

<h2>
  <%= render_cell :'tyne_core/votes', :show, @issue,
                  :upvote_path   => main_app.upvote_issue_path(:user => @project.user.username, :key => @project.key, :id => @issue.number),
                  :downvote_path => main_app.downvote_issue_path(:user => @project.user.username, :key => @project.key, :id => @issue.number) %>

  <%= @issue.summary %>
</h2>

<p><%= markup_to_html(@issue.description) %></p>
<p class="tag-list">
  <%= issue_type(@issue) %>
  <%= issue_priority(@issue) %>
</p>

  <%= render :partial => "tabs", :locals => { :issue => @issue } %>
<% end %>

<% content_for :sidebar do %>
  <% cache ["v4", "view", @issue, "sidebar"] do %>
    <%= render_cell :pod, :collapsable, I18n.t("pod.titles.people") do |cell| %>
      <% cell.content = render :partial => 'people', :locals => { :issue => @issue } %>
    <% end %>

    <%= render_cell :pod, :collapsable, I18n.t("pod.titles.dates") do |cell| %>
      <% cell.content = render :partial => 'dates', :locals => { :issue => @issue } %>
    <% end %>

    <%= render_cell :pod, :collapsable, I18n.t("pod.titles.workflow") do |cell| %>
      <% cell.content = render :partial => 'workflow', :locals => { :issue => @issue } %>
    <% end %>
  <% end %>
<% end %>
