<div class="well planning-sprint" data-cell="SprintDeletion">
  <%= sprint.name %>
  <%= link_to "Delete", main_app.sprint_path(:user => @project.user.username, :key => @project.key, :id => sprint.id), :class => "btn btn-danger delete-sprint", :confirm => "Are you sure you want to delete this sprint?", :method => :delete, :remote => true, :data => { :"confirm-title" => "Delete #{sprint.name}", :"confirm-proceed" => "Delete", :"confirm-proceed-class" => "btn-danger" } %>
</div>
