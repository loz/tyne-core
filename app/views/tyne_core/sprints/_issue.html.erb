<% cache ["v1", "backlog", issue] do %>
<li class="backlog-issue issue <%= issue.state %> state-<%= issue.issue_type.name.downcase %> collapsed" data-id="<%= issue.id %>" data-cell="BacklogItem">
  <div class="td-first dragger"></div>
  <div class="td-second">
    <p class="issue-headline issue-line-1">
      <span class="issue-type-short">
        <%= issue_type(issue, true) %>
      </span>

      <%= issue_id(issue) %>
      <span class="issue-summary"><%= content_tag :span, issue.summary, :class => "issue-#{issue.state}" %></span>
      <%= "A#{issue.position}" if issue.position %>
      <%= "B#{issue.sprint_position}" if issue.sprint_position %>
    </p>
  </div>
  <div class="issue-details">
    <%= content_tag :p, issue.summary %>
    <%= content_tag :p, issue.description %>
  </div>
</li>
<% end %>
