<%= simple_form_for(comment, :validate => true, :url => main_app.issue_comments_path(:key => comment.issue.project.user.username, :key => comment.issue.project.key, :issue_id => comment.issue.number, :format => :pjax), :html => { :data => { :cell => "Comment" } }) do |f| %>
  <%= f.input :message, :hint => "Markown enabled" %>
  <%= f.button :submit, :class => "btn" %>
<% end %>
